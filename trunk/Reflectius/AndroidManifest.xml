<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfray.a24clock"
    android:versionCode="100"
    android:versionName="Day 1" >

    <application
        android:icon="@drawable/icon24"
        android:label="@string/widget_name"
        android:name="ClockApp" >

        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver
            android:icon="@drawable/icon24"
            android:label="@string/widget_name"
            android:name="ClockWidgetReceiver" >
            <intent-filter >
                <action android:name="com.alfray.intent.action.ACTION_UPDATE_CLOCK" />
            </intent-filter>
            <intent-filter >
                <action android:name="com.alfray.intent.action.ACTION_USER_CLOCK" />
            </intent-filter>
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/clock_widget_provider" />
        </receiver>

        <service android:name="ClockService" />

        <activity
            android:label="Configure 24 Clock Widget"
            android:name=".prefs.ClockPrefsUI"
            android:theme="@style/Theme.NoTitleBar.NoBackground" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <activity-alias
            android:icon="@drawable/icon24"
            android:label="@string/widget_name"
            android:name="ClockGlobalOptionsUI"
            android:targetActivity=".prefs.ClockPrefsUI" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:label="About 24 Clock"
            android:name="IntroActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="4" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>